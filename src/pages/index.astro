---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Home from "../components/Home.astro";
import Skills from "../components/Skills.astro";
import Resume from "../components/Resume.astro";
import Portfolio from "../components/Portfolio.svelte";
import Youtube from "../components/Youtube.svelte";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";

const apiKey = import.meta.env.PUBLIC_API_KEY;
const channelId = import.meta.env.PUBLIC_CHANNEL_ID;


---

<BaseLayout>
  <Header client:load/>

  <Home client:load/>
  <Skills client:visible/>
  <Resume client:visible/>
  <Portfolio client:visible/>
  <Youtube client:visible apiKey={apiKey} channelId={channelId}/>
  <Contact client:visible/>

  <Footer client:visible/>
</BaseLayout>
